@model RegistrationWeb.Models.SharedViewModel

@{
    ViewBag.Title = "Invoice";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<div class="container">
    <form class="form-horizontal">
        <fieldset class="well">
            <div class="row text-center">
                <div class="col-md-6 col-md-offset-3">
                    <img class="col-xs-12" src="~/Asset/images/barcode.png" height="100" />
                    <h3>@ViewBag.InvoiceId</h3>
                </div>

            </div>

            @*เลขที่ใบเสร็จ*@
            <div class="form-group">
                <label class="col-md-3 control-label">เลขที่ใบเสร็จ (Invoice No.)</label>
                <div class="col-md-7">
                    <h4 class="text-dark">@ViewBag.InvoiceId</h4>
                </div>
            </div>

            @*ชื่อผู้สมัคร*@
            <div class="form-group">
                <label class="col-md-3 control-label">ชื่อผู้สมัคร (Payer)</label>
                <div class="col-md-7">
                    <h4 class="text-dark">@Model.InitialName@Model.FirstName @Model.LastName</h4>
                </div>
            </div>

            @*วันที่สมัคร*@
            <div class="form-group">
                <label class="col-md-3 control-label">วันที่สอบ</label>
                <div class="col-md-7">
                    <h4 class="text-dark">@Model.ExamDate.ToString("MM/dd/yyyy")</h4>
                </div>
            </div>

            @*กำหนดชำระ*@
            <div class="form-group">
                <label class="col-md-3 control-label">กำหนดชำระ (Expired date)</label>
                <div class="col-md-7">
                    <h4 class="text-dark">@ViewBag.ExpiredDate</h4>
                </div>
            </div>

            @*จำนวนเงินที่ชำระ*@
            <div class="form-group">
                <h3 class="col-md-3 control-label">จำนวนเงินที่ชำระ (Amounts)</h3>
                <h1 class="col-md-7 text-danger">@ViewBag.Amount บาท/Baht</h1>
            </div>

            @*กำหนดชำระ*@
            <div class="form-group text-center">
                <label class="control-label">ไม่รวมค่าธรรมเนียมของเคาเตอร์เซอวิส</label><br />
                <label class="control-label">(Excluding service fees at Counter Service)</label>
            </div>

        </fieldset>
    </form>
</div>
